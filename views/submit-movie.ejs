<%- include('includes/header') %>
  
  <div class="container py-md-5 container--narrow">
    <form action="/submit-movie" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Movie Title</small></label>
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="post-year" class="text-muted mb-1"><small>Movie Year</small></label>
        <input required name="year" id="post-year" class="form-control form-control-lg form-control-title" type="text"></input>
      </div>
      
      <button class="btn btn-primary">Save New Movie</button>
    </form>
  </div>

  <%- include('includes/footer') %>